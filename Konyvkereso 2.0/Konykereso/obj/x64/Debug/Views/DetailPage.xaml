<Page
    x:Class="Konyvkereso.Views.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Konyvkereso.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:Template10.Controls"
    xmlns:controls="using:Template10.Controls"
    xmlns:vm="using:Konyvkereso.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:DetailPageViewModel x:ConnectionId='2' x:Name="ViewModel"/>
    </Page.DataContext>

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <c:PageHeader Grid.Row="0" Grid.ColumnSpan="2" Content="{Binding Book.title}"/>

        <Image
            Grid.Column="0"
            Grid.Row="1"
            Width="300"
            Stretch="Uniform"
            Source="ms-appx:///Assets/Square150x150Logo.scale-200.png"/>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Grid.RowSpan="2">

            <ScrollViewer
                HorizontalScrollMode="Enabled"
                HorizontalScrollBarVisibility="Visible"
                VerticalScrollMode="Disabled"
                VerticalScrollBarVisibility="Hidden">
                
                <ListView
                    ItemsSource="{Binding Book.links}"
                    Padding="10">
                
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <HyperlinkButton Content="{Binding title}" NavigateUri="{Binding url}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </ScrollViewer>
            
            <TextBlock Text="{Binding Book.description}" Width="auto"/>
            
        </StackPanel>
    </Grid>
</Page>

